{
  "compilerOptions": {
    "declaration": true,
    "module": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "node16",
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "typeRoots": ["./node_modules/@types", "./src/@types"]
    }
  }
}
