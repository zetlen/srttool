{
  "name": "srttool",
  "description": "Manipulate and correct .srt subtitle files",
  "version": "0.1.3",
  "author": {
    "email": "zetlen@gmail.com",
    "name": "zetlen"
  },
  "bin": {
    "srttool": "./bin/run.js"
  },
  "bugs": "https://github.com/zetlen/srttool/issues",
  "dependencies": {
    "@oclif/core": "^4.0.33",
    "@oclif/plugin-autocomplete": "^3.2.11",
    "@oclif/plugin-help": "^6.2.18",
    "debug": "^4.4.0",
    "echogarden": "^2.0.12",
    "subtitle": "^4.2.1"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4.1.2",
    "@types/chai": "^4.3.20",
    "@types/debug": "^4.1.12",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.19.67",
    "c8": "^10.1.2",
    "chai": "^4.5.0",
    "eol": "^0.10.0",
    "eslint": "^8.57.1",
    "eslint-config-oclif": "^5.2.2",
    "eslint-config-oclif-typescript": "^3.1.12",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^10.8.2",
    "mock-stdin": "^1.0.0",
    "oclif": "^4.15.30",
    "prettier": "^3.4.1",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/zetlen/srttool",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "srttool",
    "dirname": "srttool",
    "commands": {
      "strategy": "single",
      "target": "./dist/commands/process.js"
    },
    "plugins": [
      "@oclif/plugin-autocomplete",
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "topics": {}
  },
  "repository": "zetlen/srttool",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "prettier --check . && eslint . --ext .ts",
    "format": "eslint . --ext .ts --fix && prettier --write .",
    "postpack": "shx rm -f oclif.manifest.json",
    "test": "pnpm run test:unit && pnpm run lint",
    "test:unit": "c8 mocha \"test/**/*.test.ts\"",
    "prepack": "oclif manifest && oclif readme",
    "version": "oclif readme && git add README.md"
  },
  "types": "dist/index.d.ts"
}
